<div class="body-form">
  <table>
    <tr>
      <th colspan="2"><h1><%= header_text %></h1></th>
    </tr>
    <form action="<%= action_url %>" method="POST">
      <%= auth_token %>

      <% if method %>
        <input type="hidden" name="_method" value="<%= method %>">
      <% end %>

      <tr>
        <td class="align-right"><label for="album">Album:</label></td>
        <td class="align-left">
          <select name="track[album_id]" id="album">
            <option value="" hidden>--Please Select--</option>
            <% albums.each do |album| %>
              <option value="<%= album.id %>" 
                <%= "selected" if track_album.id == album.id %>>
                <%= album.title %>
              </option>
            <% end %>
          </select>
        </td>
      </tr>

      <tr>
        <td class="align-right"><label for="title">Title:</label></td>
        <td class="align-left"><input type="text" name="track[title]" id="title"
          value="<%= track.title if track %>"></td>
      </tr>

      <tr>
        <td class="align-right"><label for="year">Track-#:</label></td>
        <td class="align-left"><input type="number" name="track[ord]" id="year"
          value="<%= track.ord if track %>"></td>
      </tr>

      <tr>
        <td class="align-right">
          <label for="bonus">Regular</label>
        </td>
        <td class="align-left">
          <input type="radio" name="track[bonus]" id="bonus" value="false"
          <%= "checked" if track.bonus == false %>>
        </td>
      </tr>

      <tr>
        <td class="align-right">
          <label for="bonus">Bonus</label>
        </td>
        <td class="align-left">
          <input type="radio" name="track[bonus]" id="bonus" value="true"
          <%= "checked" if track.bonus == true %>>
        </td>
      </tr>

      <tr>
        <td>
          <label for="lyrics">Lyrics:</label>
        </td>
        <td>
          <textarea name="track[lyrics]" id="lyrics" cols="25" rows="10">
            <%= track.lyrics if track %>
          </textarea>
        </td>
      </tr>

      <tr>
        <td colspan="2"><input type="submit" value="<%= submit_text %>" class="btn-submit"></td>
      </tr>
    </form>
  </table>
</div>