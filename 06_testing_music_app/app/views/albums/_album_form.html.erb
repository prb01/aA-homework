<div class="body-form">
  <table>
    <tr>
      <th colspan="2"><h1><%= header_text %></h1></th>
    </tr>
    <form action="<%= action_url %>" method="POST">
      <%= auth_token %>

      <% if method %>
        <input type="hidden" name="_method" value="<%= method %>">
      <% end %>

      <tr>
        <td class="align-right"><label for="artist">Artist:</label></td>
        <td class="align-left">
          <select name="album[artist_id]" id="artist">
            <option value="" hidden>--Please Select--</option>
            <% Band.all.each do |band| %>
              <option value="<%= band.id %>" 
                <%= "selected" if album_band.id == band.id %>>
                <%= band.name %>
              </option>
            <% end %>
          </select>
        </td>
      </tr>

      <tr>
        <td class="align-right"><label for="title">Title:</label></td>
        <td class="align-left"><input type="text" name="album[title]" id="title"
          value="<%= album.title if album %>"></td>
      </tr>

      <tr>
        <td class="align-right"><label for="year">Year:</label></td>
        <td class="align-left"><input type="text" name="album[year]" id="year"
          value="<%= album.year if album %>"></td>
      </tr>

      <tr>
        <td class="align-right">
          <label for="studio">Studio</label>
        </td>
        <td class="align-left">
          <input type="radio" name="album[studio]" id="studio" value="true"
          <%= "checked" if album.studio == true %>>
        </td>
      </tr>

      <tr>
        <td class="align-right">
          <label for="studio">Live</label>
        </td>
        <td class="align-left">
          <input type="radio" name="album[studio]" id="studio" value="false"
          <%= "checked" if album.studio == false %>>
        </td>
      </tr>

      <tr>
        <td colspan="2"><input type="submit" value="<%= submit_text %>" class="btn-submit"></td>
      </tr>
    </form>
  </table>
</div>